<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.somu.darwinslab.ethereum.activity.HomeActivity">

    <RelativeLayout
        android:id="@+id/activity_view_categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/main_toolbar"
            layout="@layout/main_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_toolbar"
            android:background="@android:color/white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--TEXT TABLE LAYOUT-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/colorDarkBlue"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!--BTC-->
                            <TableRow
                                android:paddingTop="10dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp">

                                <TextView
                                    android:text="@string/b_t_c"
                                    android:textColor="@color/colorGrey"
                                    style="@style/TextViewTableTayout"/>

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="50dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center"
                                    android:max="100"
                                    android:progress="100"
                                    android:progressDrawable="@drawable/progressbarcolorltc" />

                                <TextView
                                    android:gravity="end"
                                    android:text="@string/e_n_t_h_e_r_e_u_m_b_a_l_a_n_c_e"
                                    android:textAllCaps="true"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:maxLines="1"/>

                            </TableRow>

                            <TableRow
                                android:paddingTop="5dp"
                                android:paddingBottom="20dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp">

                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.3"/>

                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.3"/>

                                <LinearLayout
                                    android:gravity="end"
                                    android:layout_height="0.5dp"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.2"
                                    android:background="@color/colordarkGreyForLine"/>
                            </TableRow>

                            <!--ETH-->
                            <TableRow
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp">

                                <TextView
                                    android:text="@string/e_t_h"
                                    android:textColor="@color/colorDarkBlue"
                                    style="@style/TextViewTableTayout"/>

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="50dp"
                                    android:layout_height="3dp"
                                    android:layout_gravity="center"
                                    android:max="100"
                                    android:progress="50"
                                    android:progressDrawable="@drawable/progressbarcoloreth"/>

                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:layout_width="0dp"/>

                            </TableRow>

                            <!--LTC-->
                            <TableRow
                                android:padding="10dp">

                                <TextView
                                    android:text="@string/l_t_c"
                                    android:textColor="@color/colorGrey"
                                    style="@style/TextViewTableTayout"/>

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="50dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center"
                                    android:max="100"
                                    android:progress="80"
                                    android:progressDrawable="@drawable/progressbarcolorltc" />

                                <TextView
                                    android:gravity="end"
                                    android:text="@string/_2_3_9_7_6_4_2"
                                    android:textAllCaps="true"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorDarkBlue"
                                    android:maxLines="1"/>
                            </TableRow>

                            <!--STM-->
                            <TableRow
                                android:paddingTop="5dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp">

                                <TextView
                                    android:text="@string/s_t_m"
                                    android:textColor="@color/colorGrey"
                                    style="@style/TextViewTableTayout"/>

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="50dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center"
                                    android:max="100"
                                    android:progress="10"
                                    android:progressDrawable="@drawable/progressbarcolorltc" />

                                <TextView
                                    android:gravity="right|end"
                                    android:text="@string/_5_9_7_6_4_7"
                                    android:textAllCaps="true"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:maxLines="1"/>
                            </TableRow>

                            <!--DSH-->
                            <TableRow
                                android:paddingTop="20dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:text="@string/d_s_h"
                                    android:textColor="@color/colorGrey"
                                    style="@style/TextViewTableTayout"/>

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="50dp"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center"
                                    android:max="100"
                                    android:progress="20"
                                    android:progressDrawable="@drawable/progressbarcolorltc"/>

                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:layout_width="0dp"/>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--BUTTON AND TEXT LAYOUT-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:gravity="right">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                android:text="@string/_1_e_t_c"
                                android:textColor="@color/colorGrey"/>

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/_0_0_9_1_6_b_t_c"
                                android:fontFamily="sans-serif"
                                android:textSize="15sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:gravity="right">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                android:text="@string/d_a_y"
                                android:textAllCaps="true"
                                android:textColor="@color/colorGrey"
                                android:fontFamily="sans-serif" />

                            <ImageView android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_margin="8dp"
                                android:rotation="180"
                                android:src="@drawable/downarrow" />
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/_0_9_8"
                                android:fontFamily="sans-serif"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorRed"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="10dp"
                            android:gravity="right">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                android:text="@string/w_e_e_k"
                                android:textAllCaps="true"
                                android:textColor="@color/colorGrey"
                                android:fontFamily="sans-serif" />

                            <ImageView android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:rotation="360"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/uparrow" />
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/_2_6_5"
                                android:fontFamily="sans-serif"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorGreen"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!--BUTTON LAYOUT-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="30dp">

                        <!--SEND BUTTON-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="goToSendActivity"
                            android:background="?android:attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/sendicon"
                                android:layout_gravity="center"
                                android:padding="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/send"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:textAllCaps="true"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <!--RECEIVE BUTTON-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="goToReceiveActivity"
                            android:background="?android:attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/receiveicon"
                                android:layout_gravity="center"
                                android:padding="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/receive"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:textAllCaps="true"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <!--BUY/SELL BUTTON-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="goToBuySellActivity"
                            android:background="?android:attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/transfericon"
                                android:layout_gravity="center"
                                android:padding="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/buy_sell"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:textAllCaps="true"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"/>

            </LinearLayout>


        </ScrollView>

    </RelativeLayout>

    <!--BOTTOM SHEET-->
    <include layout="@layout/transaction_history_bottom_sheet" />

</android.support.design.widget.CoordinatorLayout>
